{{!-- Отрисовка данных по фильму в модалке --}}

{{#each this}}
<div class="movie-card js-movie-card">
      <picture class="img-container">
        <img class="movie-card__image" src="`{{poster_path}}`" alt="movie poster" />
      </picture>
      <div class="movie-card__description">
        <h2 class="movie__title">{{original_title}}</h2>
        <ul class="movie__stats-list">
          <li class="movie__stats-item"><span>Vote / Votes</span>{{vote_average}} / {{vote_count}}</li>
          <li class="movie__stats-item"><span>Popularity</span>{{popularity}}</li>
          <li class="movie__stats-item"><span>Original Title</span>{{original_title}}</li>
          {{#each genres}}
          <li class="movie__stats-item"><span>Genre</span>{{this.name}}</li>
          {{/each}}
        </ul>
        <div class="movie__description-text">
          <h3 class="movie__description-title">ABOUT</h3>
          <p class="movie__description">{{overview}}</p>
        </div>
        <div class="some-btn"></div>
      </div>
    </div>
{{/each}}